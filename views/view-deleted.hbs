<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Podgląd pracownika</li>
  </ol>
</nav>

<div class="view-employee p-5">

    
      <div class="row">
        <div class="col">
            <table class="table table-bordered table-sm align-middle">
    <thead class="thead-dark">
      <tr class="text-center">
        <th scope="col">Id</th>
        <th scope="col">Nr osobowy</th>
        <th scope="col">Imię</th>
        <th scope="col">Nazwisko</th>
        <th scope="col">Nr telefonu</th>
        <th scope="col">Email</th>
        <th scope="col">Status</th>
      </tr>
    </thead>
    <tbody>

      {{#each rows}}
      <tr class="text-center">
        <td>{{this.id}}</td>
        <td>{{this.nr_osobowy}}</td>
        <td>{{this.imie}}</td>
        <td>{{this.nazwisko}}</td>
        <td>{{this.nr_telefonu}}</td>
        <td>{{this.email}}</td>
        <td>{{this.status}}</td>
        
        
        <td>
            <a href="viewemployee/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>Podgląd</a>
            <a href="/edit/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Edycja</a>
        </td>
      </tr> 
    {{/each}}

    </tbody>
  </table>
        </div>
    </div>

    


</div>